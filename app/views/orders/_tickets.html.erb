<%= render partial: "ticket", locals: {
  name: "Early Bird",
  price: @event.price_early_bird,
  ticket_order: @order.ticket_early_bird,
  description: "Pay in 1 day after booking ticket and can not make any cancellation."
} %>

<%= render partial: "ticket", locals: {
  name: "Regular",
  price: @event.price_regular,
  ticket_order: @order.ticket_regular,
  description: "Cancellation can be possible 1 month before class."
} %>

<%= render partial: "ticket", locals: {
  name: "Last Ticket",
  price: @event.price_last_ticket,
  ticket_order: @order.ticket_last_ticket,
  description: "Cancellation can be possible 1 month before class."
} %>

<% if @order.wht %>
  <div class="summary">
    <div class="name">
      Total
    </div>
    <div class="total">
      <%= number_to_currency(@order.total, :unit => "฿ ") %>
    </div>
  </div>

  <div class="summary">
    <div class="name">
      WHT
    </div>
    <div class="total">
      <%= number_to_currency(@order.calculate_wht, :unit => "฿ ") %>
    </div>
  </div>
<% end %>

<div class="ticket-row">
  <div class="name">
    Grand Total
  </div>
  <div class="total">
    <%= number_to_currency(@order.grand_total, :unit => "฿ ") %>
  </div>
</div>

