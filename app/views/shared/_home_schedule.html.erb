<div class="schedule">
  <h2>Schedule</h2>
  <table class="table table-condensed">
    <thead>
      <tr>
        <th>Course</th>
        <th>Dates</th>
        <th class="price">Price</th>
        <th class="price">Early Bird</th>
        <th>Book &amp; Detail</th>
      </tr>
    </thead>
    <tbody>
      <% @events.each do |event| %>
        <tr>
          <td><%= event.name %>
          </td>
          <td><%= event.start_date.strftime("%e %B %Y") %> </td>
          <td class="price">
            <%= number_to_currency(event.max_price, :unit => "฿ ") %>
          </td>
          <td class="price">
            <%= number_to_currency(event.low_price, :unit => "฿ ") %>
          </td>
          <td>
            <% if event.start_date < Date.today %>
              <a class="btn btn-info" href="<%= event.url_gallery %>">
                <i class="fa fa-file-image-o"></i></i>&nbsp;&nbsp;
                Gallery
              </a><br/>
            <% else %>
              <a class="btn btn-success"
                 href="<%= event.url %>">
                <i class="fa fa-calendar"></i>&nbsp;&nbsp;
                More detail
              </a><br/>
            <% end %>
          </td>
        </tr>
      <% end %>
